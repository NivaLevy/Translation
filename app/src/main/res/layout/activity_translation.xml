<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.niva.translation.TranslationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="50dp"
        android:gravity="center"
        android:background="#803fbe"
        android:id="@+id/lblQuestion"
        android:text="Welcome to our game!" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cmdStart"
        android:background="#e73be1"
        android:text="Start"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cmdCheck"
        android:background="#edaceb"
        android:enabled="false"
        android:text="Check"
        />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/txtAnswer"
        android:hint="answer"
        android:layout_weight="1"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">



        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_height="match_parent"
                android:id="@+id/lblRight"
                android:layout_weight="1"/>
            <TextView
                android:layout_height="match_parent"
                android:id="@+id/lblWrong"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>


</LinearLayout>
